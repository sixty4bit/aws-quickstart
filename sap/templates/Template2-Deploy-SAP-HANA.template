        "SoftwareDepotVol": {
            "Type": "AWS::EC2::Volume",
            "Properties": {
                "Size": "20",
                "AvailabilityZone": {
                    "Ref": "MyAvailabilityZone"
                },
                "SnapshotId": {
                    "Ref": "SnapShotID"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "SAP HANA Media Volume"
                    }
                ]
            }
        },
